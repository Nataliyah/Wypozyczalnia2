<h3>LOGOWANIE</h3>

<%= form_tag sessions_path do %>

<p>
  <%= label_tag :login %>
  <%= text_field_tag :login, params[:login] %>
</p>

<p>
  <%= label_tag :password %>
  <%= password_field_tag :password %>
</p>

<p>
  <%= submit_tag "Log in" %>
</p>

Nie masz konta? <%= link_to 'Zarejestruj sie!', new_user_path %>

<% end %>